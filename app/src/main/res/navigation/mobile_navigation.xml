<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.shkiper.pokemonapp.ui.fragments.search.SearchFragment"
        tools:layout="@layout/fragment_search">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment"
            />
    </fragment>

    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.shkiper.pokemonapp.ui.fragments.random.RandomFragment"
        tools:layout="@layout/fragment_random"/>

    <fragment
        android:id="@+id/ThirdFragment"
        android:name="com.shkiper.pokemonapp.ui.fragments.favorites.FavoritesFragment"
        tools:layout="@layout/fragment_favorites">
    </fragment>


</navigation>